# Environment Variables
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_sales_agent

# Redis
REDIS_URL=redis://localhost:6379/0

# Azure OpenAI
AZURE_AI_ENDPOINT=https://anndocextopenai.cognitiveservices.azure.com/
AZURE_AI_API_KEY=your_azure_api_key_here
GPT_4_1_DEPLOYMENT=gpt-4.1
GPT_4_1_MINI_DEPLOYMENT=gpt-4.1-mini
AZURE_OPENAI_DEPLOYMENT=gpt-4.1

# SendGrid
SENDGRID_API_KEY=SG.your-key-here
SENDGRID_FROM_EMAIL=sales@yourdomain.com
SENDGRID_FROM_NAME=Your Company

# PhantomBuster (LinkedIn data)
PHANTOMBUSTER_API_KEY=your-key-here

# Your Company Info (for website analyzer)
YOUR_WEBSITE_URL=https://yourcompany.com

# App Settings
DEBUG=true
SECRET_KEY=change-this-in-production
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Compliance
DATA_RETENTION_DAYS=365
UNSUBSCRIBE_URL=https://yourcompany.com/unsubscribe
